<div class="container py-5"
    style="display: flex; justify-content: center; flex-direction: column; align-items: center;">
    <h3 class="text-center mb-3">Login Batch Upload</h3>
    <div class="card" style="width:100%; max-width: 35rem;">
        <div style="display: flex; justify-content: space-between; align-items: center;" class="card-header">
            <p class="m-0">Login</p><a href="/signup" type="button" class="btn btn-outline-success">Sign Up</a>
        </div>
        <div class="card-body">
            <a href="/auth/google" type="button" style="width: 100%;" class="btn btn-outline btn-group  mb-3">
                <ion-icon name="logo-google"></ion-icon> <span>Google</span>
            </a>
            <form action="/login" method="POST">
                <% if(locals.messages.error){ %>
                <div class="alert alert-danger">
                    <%= locals.messages.error %>
                </div>
                <% } %>
                <div class="mb-3 input-group leading">
                    <input name="email" required class="form-control" type="text">
                    <label class="form-label">Email address</label>
                    <div class="leading-icon">
                        <ion-icon name="heart-outline"></ion-icon>
                    </div>
                </div>
                <div class="mb-3 input-group leading">
                    <input name="password" required class="form-control" type="password">
                    <label class="form-label">Password</label>
                    <div class="leading-icon">
                        <ion-icon name="heart-outline"></ion-icon>
                    </div>
                </div>
                <button style="width: 100%;" type="submit" class="btn btn-outline">Login</button>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f5f577;
    }
</style>