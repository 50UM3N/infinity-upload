<div class="container py-5"
    style="display: flex; justify-content: center; flex-direction: column; align-items: center;">
    <h3 class="text-center mb-3">Login Batch Upload</h3>
    <div class="card" style="width:100%; max-width: 35rem;">
        <div style="display: flex; justify-content: space-between; align-items: center;" class="card-header">
            <p class="m-0">Login</p><a href="/signup" type="button" class="btn btn-outline-success">Sign Up</a>
        </div>
        <div class="card-body">
            <a href="/auth/google" type="button" style="width: 100%;" class="btn btn-outline-secondary  mb-3"><i
                    class="fab fa-google"></i> Google</a>
            <form action="/login" method="POST">
                <% if(locals.messages.error){ %>
                <div class="alert alert-danger" role="alert">
                    <%= locals.messages.error %>
                </div>
                <% } %>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <div class="input-group">
                        <div class="input-group-text">
                            <ion-icon name="person-circle-outline"></ion-icon>
                        </div>
                        <input name="email" type="email" class="form-control" placeholder="Email">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <div class="input-group">
                        <div class="input-group-text">
                            <ion-icon name="lock-closed-outline"></ion-icon>
                        </div>
                        <input name="password" type="password" class="form-control" placeholder="Password">
                    </div>
                </div>
                <button style="width: 100%;" type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #F5F5F5;
    }
</style>