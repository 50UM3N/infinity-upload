<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/pangolincss/style.css">
    <link rel="stylesheet" href="/style/style.css">
    <link href="https://unpkg.com/filepond/dist/filepond.css" rel="stylesheet" />
    <title><%= page_title %> </title>
</head>

<body>
    <%- body %>
    <script>
        const showPasswords = document.querySelectorAll('button[show-password]')
        if (showPasswords.length > 0) {
            showPasswords.forEach(showPassword => {
                showPassword.addEventListener('click', e => {
                    e.preventDefault();
                    const input = showPassword.parentElement.querySelector('.form-control');
                    const type = input.getAttribute('type') == 'password' ? 'text' : 'password'
                    const icon = type !== 'password' ? `<ion-icon name="eye-off"></ion-icon>` : `<ion-icon name="eye"></ion-icon>`
                    console.log(showPassword.innerHTML)
                    if (input.value) {
                        showPassword.innerHTML = icon
                        input.setAttribute("type", type);
                    }
                })
            })
        }
        console.log()
    </script>
    <script type="module" src="https://unpkg.com/ionicons@5.2.3/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule="" src="https://unpkg.com/ionicons@5.2.3/dist/ionicons/ionicons.js"></script>
</body>

</html>