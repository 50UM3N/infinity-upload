<script>

    const customDate = () => {
        const d = new Date();
        const months = [
            'January',
            'February',
            'March',
            'April',
            'May',
            'June',
            'July',
            'August',
            'September',
            'October',
            'November',
            'December'
        ]
        const days = [
            'Sun',
            'Mon',
            'Tue',
            'Wed',
            'Thu',
            'Fri',
            'Sat'
        ]
        const date = `${days[d.getDay()]},${months[d.getMonth()]} ${d.getDate()}`
        var hours = d.getHours();
        const ampm = hours >= 12 ? 'PM' : 'AM';
        hours = hours % 12;
        hours = hours ? hours : 12;
        const time = `${hours}:${d.getMinutes()} ${ampm}`
        return `${time} <span>•</span> ${date}`
    }
